{
    "manifest_version": 2,

    "name": "abctx",
    "description": "This extension shows widgets that aware browsing contexts.",
    "version": "0.0.1",
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "author": "jtlo",
    "homepage_url": "https://github.com/jtlo/context",
    
    "permissions": [
        "storage",
        "tabs",
        "history"
    ],
    "content_scripts": [{
        "js": [ "jquery-2.1.0.min.js", "jquery-ui-1.10.4.custom.min.js", "popup.js" ],
        "css": ["jquery-ui-1.10.4.custom.min.css"],
        "matches": [ "http://*/*", "https://*/*"]
    }]
}
